{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "worksRoute": {
        "ClusterId": "worksCluster",
        "Match": {
          "Path": "/works/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/works"
          },
          { "RequestHeader": "X-Forwarded-Prefix", "Append": "/works" }
        ]
      },
      "filesRoute": {
        "ClusterId": "filesCluster",
        "Match": {
          "Path": "/files/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/files"
          },
          { "RequestHeader": "X-Forwarded-Prefix", "Append": "/files" }
        ]
      },
      "analysisRoute": {
        "ClusterId": "analysisCluster",
        "Match": {
          "Path": "/analysis/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/analysis"
          },
          { "RequestHeader": "X-Forwarded-Prefix", "Append": "/analysis" }
        ]
      }
    },
    "Clusters": {
      "worksCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://works.api:8081/"
          }
        }
      },
      "filesCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://filestorage.api:8082/"
          }
        }
      },
      "analysisCluster": {
        "Destinations": {
          "d1": {
            "Address": "http://analysis.api:8083/"
          }
        }
      }
    }
  }
}
